<h1><%= @post.title %></h1>
<p>
    <%= @post.content %>
</p>
<small>
    <% @post.categories.each do |cat| %>
        | <%= cat.name %>
    <% end %>
</small>

<b><b><b><b>

<h4>Comments: </h4>
<% @post.comments.each do |comm| %>
    <p>
        <%= comm.user.username %> says: <%= comm.content %><br>
    </p>
<% end %>

<b><b><b><b>

<h4>Post a Comment:</h4>
<%= form_for @comment do |f| %>
    <%= f.label :content %><br>
    <%= f.text_area :content %><br><br>

    <%= f.collection_select :user_id, @users, :id, :username, {include_blank: "Select User"} %>
    <br><br>

    <%# f.fields_for :categories, post.categories.build do |categories_fields|
        categories_fields.text_field :name
    end %>

    <%= f.fields_for :user, @comment.user.build do |user_fields| %>    
        <%= user_fields.label :comment_user_attributes_username, "Username:" %>
        <%= user_fields.text_field :username, :id => :comment_user_attributes_username %>
    <% end %>
    
    
    <br><br><br>
    
    <%= f.hidden_field :post_id, :value => @post.id %>
    <%= f.submit %>
<% end %>