<%= form_for @post do |t| %>
    <%= t.label :title %>: 
    <%= t.text_field :title, :id => "post_title" %><br>

    <%= t.label :content %>: 
    <%= t.text_field :content, :id => "post_content" %><br><br>

    <%= t.collection_check_boxes :category_ids, @categories, :id, :name %>

    <%= t.label :%>

    <%= t.submit %>
<% end %>