<%= form_for @post do |t| %>
    <%= t.label :title %>: 
    <%= t.text_field :title, :id => "post_title" %><br>

    <%= t.label :content %>: 
    <%= t.text_field :content, :id => "post_content" %><br><br>
    
     <%= t.collection_check_boxes :category_ids, @categories, :id, :name %><br><br>
    
    <%= t.fields_for :cateogries_attributes_0 do |cat| %>
        <%= cat.label :name %>: <%= cat.text_field :name, name: "post_categories_attributes_0_name" %><br><br>
    <% end %>

    <%= t.submit "Create Post" %>
<% end %>